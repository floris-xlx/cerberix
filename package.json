{
  "name": "cerberix",
  "private": true,
  "version": "0.1.0",
  "description": "Cerberix - Managed webhook delivery platform (monorepo)",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@cerberix/web",
    "dev:worker": "turbo run dev --filter=@cerberix/worker",
    "dev:docs": "turbo run dev --filter=@cerberix/docs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "migrate": "pnpm --filter @cerberix/db migrate",
    "drizzle:generate": "pnpm --filter @cerberix/db generate",
    "drizzle:studio": "pnpm --filter @cerberix/db studio"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.3",
    "typescript": "^5.6.3",
    "vitest": "^1.5.3"
  }
}


